@model Canteen.Model.User

@{
    ViewBag.Title = "Login";
}

<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()







    <div class="form-horizontal" style="width: 50%; float:right;">
        <img src="~/Img/Cafeteria-Management-Banner.png" style="height:70%;width:80%; float:right" />
    </div>
    <div style="background-color: rgba(117, 185, 113, 0.9);">
        <div class="form-horizontal" style="width: 50%; background-color: rgba(117, 185, 113, 0.9);">
            <br />
            <h2 class="text-center">Member Login</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <br /><br /> <br /><br /><br /> <br /> <br />
            <div class="form-group" style="margin:6px" >
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10" style="margin-left:80px">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-controls" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <br />
                    <br />
                    <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-success" style="width:40%; margin-left:20px;" />

                    @Html.ActionLink("Forget Password", "Create", "User")
                </div>
            </div>
        </div>
            @Html.ActionLink("Don't Have Account?", "Create", "User")



        </div>
        
        }



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
